@model IEnumerable<EFBlueMedicalWebApp.Models.Users>

@{
    ViewData["Title"] = "Index";
}

<h1>Usuarios</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.UserID">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.UserID">Detalles</a> |
                <a asp-action="Delete" asp-route-id="@item.UserID">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
