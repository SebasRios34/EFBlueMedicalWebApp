@model IEnumerable<EFBlueMedicalWebApp.Models.Department>

@{
    ViewData["Title"] = "Index";
}

<h1>Departamentos</h1>

<p>
    <a asp-action="Create">Crear Departamento</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DepartmentName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DepartmentName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.DepartmentID">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.DepartmentID">Detalles</a> |
                <a asp-action="Delete" asp-route-id="@item.DepartmentID">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
